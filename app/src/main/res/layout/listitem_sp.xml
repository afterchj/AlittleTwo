<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/sp_img"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/meinv1" />

        <TextView
            android:id="@+id/sp_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/sp_img"
            android:text="李白" />

        <TextView
            android:id="@+id/sp_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sp_name"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/sp_img"
            android:autoLink="all"
            android:text="有酒在手，天下我有" />

        <com.example.after.alittletwo.views.MyImageView
            android:id="@+id/sp_icon"
            android:layout_width="360dp"
            android:layout_height="200dp"
            android:layout_below="@id/sp_img"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:src="@drawable/friends1" />
    </RelativeLayout>

